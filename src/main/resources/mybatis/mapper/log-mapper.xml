<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.xmu.sy.ext.mapper.LogMapper">
    <resultMap id="logMap" type="cn.edu.xmu.sy.ext.domain.LogDO">
        <result column="id" jdbcType="BIGINT" property="id"/>
        <result column="platform" jdbcType="VARCHAR" property="platform"/>
        <result column="version" jdbcType="VARCHAR" property="version"/>
        <result column="primary_category" jdbcType="VARCHAR" property="primaryCategory"/>
        <result column="secondary_category" jdbcType="VARCHAR" property="secondaryCategory"/>
        <result column="content" jdbcType="VARCHAR" property="content"/>
        <result column="gmt_create" jdbcType="TIMESTAMP" property="gmtCreate"/>
        <result column="gmt_modify" jdbcType="TIMESTAMP" property="gmtModify"/>
    </resultMap>

    <sql id="generalInsertColumns">
        id, platform, version, primary_category, secondary_category, content, gmt_create, gmt_modify
    </sql>

    <sql id="generalSelectColumns">
        id, platform, version, primary_category, secondary_category, content
    </sql>

    <insert id="save" parameterType="cn.edu.xmu.sy.ext.domain.LogDO">
        insert into tbl_log(<include refid="generalInsertColumns"/>)
        values(#{id}, #{platform}, #{version}, #{primaryCategory}, #{secondaryCategory}, #{content}, #{gmtCreate},
        #{gmtModify})
    </insert>

    <insert id="saveBatch" parameterType="cn.edu.xmu.sy.ext.domain.LogDO">
        insert into tbl_log(<include refid="generalInsertColumns"/>)
        values
        <foreach collection="list" item="item" separator=",">
            (#{item.id}, #{item.platform}, #{item.version}, #{item.primaryCategory}, #{item.secondaryCategory},
            #{item.content}, #{item.gmtCreate}, #{item.gmtModify})
        </foreach>
    </insert>

    <update id="updateById" parameterType="cn.edu.xmu.sy.ext.domain.LogDO">
        update tbl_log
        set gmt_modify = #{gmtModify}
        <if test="platform != null">
            , platform = #{platform}
        </if>
        <if test="version != null">
            , version = #{version}
        </if>
        <if test="primaryCategory != null">
            , primary_category = #{primaryCategory}
        </if>
        <if test="secondaryCategory != null">
            , secondary_category = #{secondaryCategory}
        </if>
        <if test="content != null">
            , content = #{content}
        </if>
        where id = #{id} and is_delete = 0
    </update>

    <update id="removeById" parameterType="java.lang.Long">
        update tbl_log set is_delete = 1
        where id = #{id} and is_delete = 0
    </update>

    <select id="getById" parameterType="java.lang.Long" resultMap="logMap">
        select
        <include refid="generalSelectColumns"/>
        from tbl_log
        where id = #{id} and is_delete = 0
    </select>
</mapper>