<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.xmu.sy.ext.mapper.SettingMapper">
    <resultMap id="settingMap" type="cn.edu.xmu.sy.ext.domain.SettingDO">
        <result column="id" jdbcType="BIGINT" property="id"/>
        <result column="parent" jdbcType="BIGINT" property="parent"/>
        <result column="prop_name" jdbcType="VARCHAR" property="propName"/>
        <result column="prop_value" jdbcType="VARCHAR" property="propValue"/>
        <result column="description" jdbcType="VARCHAR" property="description"/>
        <result column="gmt_create" jdbcType="TIMESTAMP" property="gmtCreate"/>
        <result column="gmt_modify" jdbcType="TIMESTAMP" property="gmtModify"/>
    </resultMap>

    <sql id="generalInsertColumns">
        id, parent, prop_name, prop_value, description, gmt_create, gmt_modify
    </sql>

    <sql id="generalSelectColumns">
        id, parent, prop_name, prop_value, description
    </sql>

    <insert id="save" parameterType="cn.edu.xmu.sy.ext.domain.SettingDO">
        insert into tbl_setting(<include refid="generalInsertColumns"/>)
        values(#{id}, #{parent}, #{propName}, #{propValue}, #{description}, #{gmtCreate}, #{gmtModify})
    </insert>

    <insert id="saveBatch" parameterType="cn.edu.xmu.sy.ext.domain.SettingDO">
        insert into tbl_setting(<include refid="generalInsertColumns"/>)
        values
        <foreach collection="list" item="item" separator=",">
            (#{item.id}, #{item.parent}, #{item.propName}, #{item.propValue}, #{item.description}, #{item.gmtCreate}, #{item.gmtModify})
        </foreach>
    </insert>

    <update id="updateById" parameterType="cn.edu.xmu.sy.ext.domain.SettingDO">
        update tbl_setting
        set gmt_modify = #{gmtModify}
        <if test="parent != null">
            , parent = #{parent}
        </if>
        <if test="propName != null">
            , prop_name = #{propName}
        </if>
        <if test="propValue != null">
            , prop_value = #{propValue}
        </if>
        <if test="description != null">
            , description = #{description}
        </if>
        where id = #{id} and is_delete = 0
    </update>

    <update id="removeById" parameterType="java.lang.Long">
        update tbl_setting set is_delete = 1
        where id = #{id} and is_delete = 0
    </update>

    <select id="getById" parameterType="java.lang.Long" resultMap="settingMap">
        select
        <include refid="generalSelectColumns"/>
        from tbl_setting
        where id = #{id} and is_delete = 0
    </select>

    <select id="getValueByKey" parameterType="java.lang.String" resultMap="java.lang.String">
        select prop_value
        from tbl_setting
        where prop_key = #{propKey} and is_delete = 0
    </select>

    <select id="listGroup" resultMap="settingMap">
        select
        <include refid="generalSelectColumns"/>
        from tbl_setting
        where parent = 0 and id_delete = 0
    </select>

    <select id="listItem" resultMap="settingMap">
        select
        <include refid="generalSelectColumns"/>
        from tbl_setting
        where parent != 0 and id_delete = 0
    </select>
</mapper>